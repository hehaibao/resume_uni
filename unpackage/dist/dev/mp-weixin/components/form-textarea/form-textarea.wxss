.form-textarea .uni-textarea {
  padding: 10rpx 30rpx;
  height: 400rpx;
  position: relative;
}
.form-textarea .uni-textarea .textarea-ui {
  width: 100%;
  font-size: 30rpx;
  font-family: STXihei;
  font-weight: 400;
  height: 100%;
  color: #101010;
  position: relative;
  background-color: #f2f2f2;
  padding: 30rpx;
}
.form-textarea .uni-textarea .size {
  position: absolute;
  bottom: -36rpx;
  right: 30rpx;
}
.form-textarea .uni-textarea .size .max-text {
  color: #101010;
}
.form-textarea .uni-textarea .size .curr-text {
  color: #00d2ca;
}

