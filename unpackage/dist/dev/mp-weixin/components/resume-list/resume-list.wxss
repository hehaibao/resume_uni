.cu-list.resume-list {
  margin: 30rpx 30rpx 0;
}
.cu-list.resume-list .cu-item.resume-item {
  display: flex;
  background-color: #f2f2f2;
  border-radius: 20rpx;
  padding: 50rpx 30rpx;
  margin-bottom: 30rpx;
}
.cu-list.resume-list .cu-item.resume-item:nth-last-child(2)::after {
  border: none;
}
.cu-list.resume-list .cu-item.resume-item::after {
  border-bottom-color: transparent;
}
.cu-list.resume-list .cu-item.resume-item .avatar {
  width: 100rpx;
  height: 100rpx;
  background-color: #ddd;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  margin-right: 20rpx;
  align-self: flex-start;
}
.cu-list.resume-list .cu-item.resume-item .resume-content {
  display: flex;
  flex-direction: column;
}
.cu-list.resume-list .cu-item.resume-item .resume-content .resume-info-one {
  display: flex;
  align-items: center;
}
.cu-list.resume-list .cu-item.resume-item .resume-content .resume-info-one .resume-title {
  color: #101010;
  font-size: 32rpx;
  flex: 1;
}
.cu-list.resume-list .cu-item.resume-item .resume-content .resume-info-one .resume-more {
  font-size: 28rpx;
  color: #00d2ca;
}
.cu-list.resume-list .cu-item.resume-item .resume-content .resume-info-two {
  padding: 12rpx 0 0;
}
.cu-list.resume-list .cu-item.resume-item .resume-content .resume-info-two .resume-position {
  color: #9a9a9a;
  font-size: 26rpx;
  flex: 1;
}
.cu-list.resume-list .cu-item.resume-item .resume-content .resume-info-two .resume-time {
  color: #9a9a9a;
  font-size: 24rpx;
}
.cu-list.resume-list .cu-modal {
  z-index: 9999;
}
.cu-list.resume-list .cu-dialog {
  width: 640rpx;
  border-radius: 25rpx;
}
.cu-list.resume-list .cu-dialog .content-input {
  padding: 0 50rpx 20rpx;
  margin: 30rpx 0;
}
.cu-list.resume-list .cu-dialog .cu-form-group {
  border: 2rpx solid #f2f2f2;
  border-radius: 10rpx;
}
.cu-list.resume-list .cu-dialog .cu-form-group input {
  font-size: 36rpx;
  padding-right: 0;
}
.cu-list.resume-list .cu-dialog .save-name {
  width: 100%;
  height: 100%;
  border: none;
  border-top: 1rpx solid #f2f2f2;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100rpx;
  color: #00d2ca;
  font-size: 34rpx;
}

